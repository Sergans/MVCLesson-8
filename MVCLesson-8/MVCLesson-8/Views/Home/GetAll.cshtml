@model List<MVCLesson_8.Models.Employee>

@{
    ViewData["Title"] = "Список";
}

<h1>Список сотрудников</h1>

@if (Model.Count != 0) 
{ <table class="table">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Фамилмя
            </th>
            <th>
                Возраст
            </th>
            <th>
                Должность
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                    @item.Name
                    </a>
                    
                </td>
                <td>
                    @item.Famaly
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @item.Post
                </td>

            </tr>
        }
    </tbody>
</table>
}
 else
 {
<p>Сотрудники не найдены</p>

 }
